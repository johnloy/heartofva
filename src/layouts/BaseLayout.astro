---
import 'reasonable-colors'
import '../assets/pico.css'
import '../assets/common.scss'
import '../components/MainNav.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import SiteBackground from '../components/SiteBackgound.astro'
import SiteBackgound from '../components/SiteBackgound.astro'

export interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300;0,400;0,600;1,300;1,400;1,600&family=Merriweather:ital,wght@0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <title>{title}</title>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js" defer></script>
  </head>
  <body>
    <SiteBackgound />
    <Header />
    <main>
      <div class="page-width">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>

<script>
  import { init } from '../assets/common.js'
  init()
</script>

<style is:global is:inline>
  .theme-toggle {
    position: fixed;
    right: 2.5rem;
    bottom: 2.5em;
  }

  .content-bg {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(5px);
    border-top: 1px solid white;
    border-radius: 8px;
    padding: 3rem 4rem;
  }

  :where(.content-bg) h2 {
    /* border-bottom: 1px dotted black; */
  }

  :where(.content-bg) h1 {
    font-size: 2rem;
  }

  :where(.content-bg) > *:not(aside) {
    width: 60%;
  }

  main {
    margin-bottom: 3rem;
  }

  .badge {
    background: var(--_background, red);
    color: var(--_color, white);
    padding-inline: .5em;
    border-radius: 1em;
  }
</style>
