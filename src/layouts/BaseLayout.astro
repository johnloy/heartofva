---
import '../assets/common.css'
// import '../assets/pico.css'
import '../components/MainNav.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import SiteBackground from '../components/SiteBackground.astro'

export interface Props {
  title: string
}

const { title, bodyClasses } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300;0,400;0,600;1,300;1,400;1,600&family=Merriweather:ital,wght@0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <title>{title}</title>
    <script
      src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"
      defer></script>

    <script src="https://cdn.jsdelivr.net/npm/pace-js@latest/pace.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pace-js@latest/pace-theme-default.min.css">
  </head>
  <body>
    <SiteBackground />
    <Header />
    <main class="readable">
      <div class="page-width">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>

<script>
  import { init } from '../assets/common.js'
  init()
</script>

<style is:global is:inline>
  .surface-primary {
    backdrop-filter: blur(5px);
    background: rgba(255, 255, 255, 0.8);
    border-radius: 8px;
    border-top: 1px solid white;
  }

  .main-content {
    padding: 3rem 4rem;
    margin-bottom: 3rem;
    display: grid;
    grid-template-columns: 60% 1fr;
    grid-template-rows: auto;
    grid-auto-rows: auto;
    grid-template-areas:
      'main aside'
      'main aside';
    column-gap: 4rem;
  }

  .main-content > *:not(aside) {
    grid-column-start: 1;
    grid-column-end: 1;
  }

  .main-content h1 {
    font-size: var(--font-size-xl);
  }

  .main-content h2 {
    font-size: var(--font-size-lg);
    font-weight: 300;
    border-block-end: 1px dotted var(--color-green-3);
    padding-block-end: 0.25rem;
  }

  .main-content > aside {
    grid-area: aside;
    grid-row-start: 2;
    position: sticky;
    top: 2rem;
    margin-top: 2.7rem;
  }
  .main-content > aside > .toc {
    position: absolute;
    top: 0;
    background: white;
    padding: 1.5rem;
    border-radius: 4px;
    font-size: var(--font-size-sm);
    box-shadow: 8px 8px 0 rgba(96,111,211,0.2);
  }

  .main-content > aside > .toc * {
    font-size: inherit;
  }

  .toc h3 {
    text-transform: uppercase;
    line-height: 1;
    margin-block-end: 1.5rem;
  }

  .toc ul {
    padding: 0;
    font-family: var(--font-family-sans);
    margin-block-end: 0;
  }

  .toc li {
    padding: 0;
    margin-block-end: 0.5rem;
  }

  .toc > ul > li {
    font-weight: 700;
  }

  .toc li li {
    padding-inline-start: 1rem;
    font-weight: 300;
  }


</style>
